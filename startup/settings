" vim:ft=vim:
set nocompatible
set encoding=UTF8
let $LANG='en_Us.utf-8'

set backspace=indent,eol,start
set history=50
set ruler
set showcmd
set incsearch

set clipboard=unnamed
set wildmenu
set listchars=eol:Â¬,tab:>-,nbsp:%
set list

set foldlevelstart=3

let $VIMBACKUPDIR=expand($VIMBASE.'/.vimbackup')

set backupdir=$VIMBACKUPDIR
set directory=$VIMBACKUPDIR

if &t_Co > 2 || has("gui_running")
  syntax on
  set hlsearch
endif

if !exists(":DiffOrig")
  command DiffOrig vert new | set bt=nofile | r # | 0d_ | diffthis
        \ | wincmd p | diffthis
endif

if has('gui_running')
  if has('gui_gtk')
    set guifont=Ubuntu\ Mono\ 14
  elseif has('gui_win32')
    set guifont=Consolas:h14
  endif
endif

let g:XkbSwitchEnabled = 1 
let g:XkbSwitchIMappings = ['ru']

set keymap=russian-jcukenwin
set iminsert=0
set imsearch=0
highlight lCursor guifg=NONE guibg=Cyan

"INDENT

set tabstop=2
set shiftwidth=2
set smarttab
set expandtab

"SOME APPE

set nu
set rnu
set autoread 
if has('mouse')
  if has('gui_running')
    set mouse=a
  else
    set mouse=nv
  endif
endif
set cursorline
set guioptions-=T
set guioptions-=m
set ignorecase
"BACKUP

set sessionoptions=blank,buffers,curdir,folds,help,tabpages,winsize

"XTERM
if &term =~ "xterm"
  "256 color --
  let &t_Co=256
  " restore screen after quitting
  set t_ti=ESC7ESC[rESC[?47h t_te=ESC[?47lESC8
  if has("terminfo")
    let &t_Sf="\ESC[3%p1%dm"
    let &t_Sb="\ESC[4%p1%dm"
  else
    let &t_Sf="\ESC[3%dm"
    let &t_Sb="\ESC[4%dm"
  endif
endif

if has("autocmd")
  filetype plugin indent on
  augroup vimrc
    au!

    au BufWritePost vimrc :so $MYVIMRC

    au VimLeave * :mks! ~/.lastvimsess
    "au VimEnter * :so! ~/.lastvimsess

  augroup END
else
  set autoindent " always set autoindenting on
endif " has("autocmd")

nmap <C-Tab> gt 
nmap <C-S-Tab> gT 

nmap <leader>p "0p
vmap <leader>p "0p

nmap <F10> :so ~/.lastvimsess<CR>
nmap <F11> :mks! ~/.vimsess<CR>
nmap <F12> :so ~/.vimsess<CR>
nmap <S-F9> <ESC>:make<CR>
nmap <F9> <ESC>:exec g:runprg<CR>
